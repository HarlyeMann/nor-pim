        <th width="2000">Type</th>
        <th width="3000">Value</th>
    </tr>
    @foreach (var item in Model.ProductMaintenanceIdentifierIndexWithFilter)
    {
        <tr style="background-color: aliceblue; font-weight: normal;">
            <td>
                @Html.DisplayFor(modelItem => item.ProductIdentifierName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Identifier)
                <a href="http://efobasen.efo.no/produkt-detaljer?pn=1000132">EFO</a>
                | <a href="http://draka.no/cables/tslf-o-24kv/">FDV</a>
<!--                <a href="@Model.EFOLink@Html.DisplayFor(modelItem => item.Identifier)">EFO</a>
                | <a href="@Model.FVDLink@Html.DisplayFor(modelItem => item.Identifier)">FDV</a>-->
            </td>
        </tr>
    }
</table>

