@model IEnumerable<norpim.BusinessLogicLayer.CrudeProductAttributeContract>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "CrudeProductAttributeCreate")
</p>

<table class="table">
    <tr>
        <th>Product Attribute</th>
        <th>Product Attribute Unit</th>
        <th>Value</th>
        <th>Date Time</th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.ProductAttributeRcd) </td>
            <td>@Html.DisplayFor(modelItem => item.ProductAttributeUnitRcd) </td>
            <td>@Html.DisplayFor(modelItem => item.Value) </td>
            <td>@Html.DisplayFor(modelItem => item.DateTime) </td>
            <td>@Html.ActionLink("Details", "CrudeProductAttributeDetails", new { productAttributeId = item.ProductAttributeId }) |
                @Html.ActionLink("Edit", "CrudeProductAttributeEdit", new { productAttributeId = item.ProductAttributeId }) |
                @Html.ActionLink("New", "CrudeProductAttributeCreate", new { })
            </td>
        </tr>
    }

</table>
