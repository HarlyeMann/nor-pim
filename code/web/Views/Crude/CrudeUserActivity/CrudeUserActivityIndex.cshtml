@model IEnumerable<norpim.BusinessLogicLayer.CrudeUserActivityContract>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "CrudeUserActivityCreate")
</p>

<table class="table">
    <tr>
        <th>User Activity Type</th>
        <th>User Activity Note</th>
        <th>Date Time</th>
        <th>Originating Address</th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.UserActivityTypeRcd) </td>
            <td>@Html.DisplayFor(modelItem => item.UserActivityNote) </td>
            <td>@Html.DisplayFor(modelItem => item.DateTime) </td>
            <td>@Html.DisplayFor(modelItem => item.OriginatingAddress) </td>
            <td>@Html.ActionLink("Details", "CrudeUserActivityDetails", new { userActivityId = item.UserActivityId }) |
                @Html.ActionLink("Edit", "CrudeUserActivityEdit", new { userActivityId = item.UserActivityId }) |
                @Html.ActionLink("New", "CrudeUserActivityCreate", new { })
            </td>
        </tr>
    }

</table>
