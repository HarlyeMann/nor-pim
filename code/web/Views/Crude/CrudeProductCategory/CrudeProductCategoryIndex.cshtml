@model IEnumerable<norpim.BusinessLogicLayer.CrudeProductCategoryContract>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "CrudeProductCategoryCreate")
</p>

<table class="table">
    <tr>
        <th>Product Category Code</th>
        <th>Product Category Name</th>
        <th>Product Category Position</th>
        <th>State</th>
        <th>Date Time</th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.ProductCategoryCode) </td>
            <td>@Html.DisplayFor(modelItem => item.ProductCategoryName) </td>
            <td>@Html.DisplayFor(modelItem => item.ProductCategoryPosition) </td>
            <td>@Html.DisplayFor(modelItem => item.StateRcd) </td>
            <td>@Html.DisplayFor(modelItem => item.DateTime) </td>
            <td>@Html.ActionLink("Details", "CrudeProductCategoryDetails", new { productCategoryId = item.ProductCategoryId }) |
                @Html.ActionLink("Edit", "CrudeProductCategoryEdit", new { productCategoryId = item.ProductCategoryId }) |
                @Html.ActionLink("New", "CrudeProductCategoryCreate", new { })
            </td>
        </tr>
    }

</table>
