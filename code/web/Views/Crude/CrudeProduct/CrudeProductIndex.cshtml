@model IEnumerable<norpim.BusinessLogicLayer.CrudeProductContract>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "CrudeProductCreate")
</p>

<table class="table">
    <tr>
        <th>Product Name</th>
        <th>State</th>
        <th>Date Time</th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.ProductName) </td>
            <td>@Html.DisplayFor(modelItem => item.StateRcd) </td>
            <td>@Html.DisplayFor(modelItem => item.DateTime) </td>
            <td>@Html.ActionLink("Details", "CrudeProductDetails", new { productId = item.ProductId }) |
                @Html.ActionLink("Edit", "CrudeProductEdit", new { productId = item.ProductId }) |
                @Html.ActionLink("New", "CrudeProductCreate", new { })
            </td>
        </tr>
    }

</table>
